#In this file i will plot the analytic soln that comes from the 1D schrodinger equation. This is solved analytically and hence don't really
#need to code but i may if it becomes apparent it would be useful

import numpy as np                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
import matplotlib.pyplot as plt
import scipy

#NB-Units such that h bar=1, m=1

def Ground_state_dist(x):
    G=((np.exp((-(x-1)**2)/2))/(np.pi)**(1/4))**2
    return G 

plt.figure()
plt.xlabel("x")
plt.ylabel("$|\psi_(x)|^{2}$")
x_values=np.arange(-0.6,2.7,0.1)
y_values=Ground_state_dist(x_values)
plt.plot(x_values,y_values)

plt.savefig('Schrodinger Dist.png')
plt.show()